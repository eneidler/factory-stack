<UserControl x:Class="ProductionScheduler.Views.UserLoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:view="clr-namespace:ProductionScheduler.Views"
             xmlns:viewModel="clr-namespace:ProductionScheduler.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.DataContext>
        <viewModel:UserLoginViewModel/>
    </UserControl.DataContext>
    
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <Label Grid.Row="0"
               Grid.RowSpan="2"
               Content="FactoryStack.IO"
               HorizontalContentAlignment="Center"
               Margin="0 0 0 25"
               FontSize="48"
               FontFamily="Ink Free"
               FontWeight="Bold"/>
        <Label Grid.Row="1"
               Content="Introducing a smarter way to manage production."
               HorizontalContentAlignment="Center"
               FontSize="16"
               Margin="0 10 0 0"/>
        <TextBlock Grid.Row="2"
                   Text="Username:"
                   HorizontalAlignment="Left"
                   Margin="62 0 0 0"
                   FontSize="16"/>
        <TextBox Grid.Row="3"
                 Name="UsernameTextbox"
                 VerticalContentAlignment="Center"
                 FontSize="20"
                   Width="360"
                   Height="36"/>
        <TextBlock Grid.Row="4"
                   Text="Password:"
                   HorizontalAlignment="Left"
                   Margin="62 0 0 0"
                   FontSize="16"/>
        <PasswordBox Grid.Row="5"
                 Name="PasswordTextbox"
                 VerticalContentAlignment="Center"
                 FontSize="20"
                   Width="360"
                   Height="36"/>
        <Button x:Name="LoginButton"
                Click="LoginButton_Click"
                Grid.Row="6"
                Grid.RowSpan="2"
                Content="Login"
                Width="100"
                Height="40"
                FontSize="16"
                Margin="0 25 0 0"/>
        <Label Grid.Row="8"
               Content="FactoryStack.IO is a product of GS Software, A division of Glitchd Studios, ltd."
               HorizontalContentAlignment="Center"
               Margin="0 15 0 0"/>
        <Label Grid.Row="9"
               Content="Copyright 2019. All rights reserved. Please see Terms of Use / EULA for further information."
               HorizontalContentAlignment="Center"/>

    </Grid>
</UserControl>
