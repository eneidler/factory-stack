        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Image
            Grid.RowSpan="2"
            Width="355.446"
            Height="187.129"
            Margin="68.277,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Source="/ProductionScheduler;component/Images/FactoryStackIO_6.png" />
        <StackPanel
            Grid.Row="1"
            Width="450"
            Height="150"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <Label
                Width="223.66"
                Height="25.96"
                Margin="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="FactoryStack.IO | Process Control System" />
            <Label
                Width="121.514"
                Height="25.96"
                Margin="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="Basic.IO Version 0.1.1" />
            <Label
                Width="155.4"
                Height="25.96"
                Margin="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="© 2019 Glitchd Studios, ltd." />
            <Label
                Width="107.906"
                Height="25.96"
                Margin="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="All rights reserved." />
            <Label
                Width="313.824"
                Height="21.97"
                Margin="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="FactoryStack.IO is a product of GS Software, A division of Glitchd Studios, ltd."
                FontSize="9" />
            <Label
                Width="313.824"
                Height="21.97"
                Margin="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                HorizontalContentAlignment="Center"
                Content="Please see Terms of Use / EULA for further information."
                FontSize="9" />
        </StackPanel>
    </Grid>
</Window>
