<UserControl
    x:Class="ProductionScheduler.Views.JobDisplayView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ProductionScheduler.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="clr-namespace:ProductionScheduler.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <UserControl.DataContext>
        <viewModel:ProductionGUIViewModel />
    </UserControl.DataContext>

    <Grid>
        <Button
            Width="100"
            Height="50"
            Command="{Binding ToggleJobViewCommand}"
            Content="Return" />
    </Grid>
</UserControl>
